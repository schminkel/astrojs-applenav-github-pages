---
import { Debug } from "astro/components";

const { baseURL } = Astro.props;

const appleLogoSVGLight = "url('" + baseURL + "apple-logo-light.svg')";
const appleLogoSVGDark = "url('" + baseURL + "apple-logo-dark.svg')";

const searchIconSVGLight = "url('" + baseURL + "search-icon-light.svg')";
const searchIconSVGDark = "url('" + baseURL + "search-icon-dark.svg')";

const bagIconSVGLight = "url('" + baseURL + "bag-icon-light.svg')";
const bagIconSVGDark = "url('" + baseURL + "bag-icon-dark.svg')";

const closeIconSVGLight = "url('" + baseURL + "close-icon-light.svg')";
const closeIconSVGDark = "url('" + baseURL + "close-icon-dark.svg')";

const bagButtonHidden = true;
const searchButtonHidden = true;
const logoTextHidden = true;
const logoText = "Apple"

let searchbarMargin = "120px";
if (searchButtonHidden) {
  searchbarMargin = "70px";
}
---

<!-- INFO HTML -->
<div class="nav-container">
  <nav>
    <ul class="mobile-nav">
      <li>
        <div class="menu-icon-container">
          <div class="menu-icon">
            <span class="line-1"></span>
            <span class="line-2"></span>
          </div>
        </div>
      </li>

      <li>
        <a href="#" class="link-logo"></a>
      </li>

      {(() => {
        if (bagButtonHidden) {
          return (
            <li><p style="width:20px;" ></p></li>
          );
        } else {
          return (
            <li>
              <a href="" class="link-bag"></a>
            </li>
          );  
        }
      })()}

    </ul>

    <ul class="desktop-nav">
      
      {(() => {
        if (logoTextHidden) {
          return (
            <li>
              <a href="#" class="link-logo"></a>
            </li>
          );
        } else {
          return (
            <li>
              <a href="#" class="link-logo-text">{logoText}</a>
            </li>
          );  
        }
      })()}
      
      <li>
        <a href="#">Mac</a>
      </li>
      <li>
        <a href="#">iPad</a>
      </li>
      <li>
        <a href="#">iPhone</a>
      </li>
      <li>
        <a href="#">Watch</a>
      </li>
      <li>
        <a href="#">TV</a>
      </li>
      <li>
        <a href="#">Music</a>
      </li>
      <li>
        <a href="#">Support</a>
      </li>

      {(() => {
        if (!searchButtonHidden) {
          return (
            <li>
              <a href="#" class="link-search"></a>
            </li>
          );
        }
      })()}

      {(() => {
        if (!bagButtonHidden) {
          return (
            <li>
              <a href="" class="link-bag"></a>
            </li>
          );
        }
      })()}

    </ul>
  </nav>

  <!-- End of navigation menu items -->

  <div class="search-container hide">
    <div class="link-search"></div>
    <div class="search-bar">
      <form action="">
        <input type="text" placeholder="Search apple.com" />
      </form>
    </div>
    <div class="link-close"></div>

    <div class="quick-links">
      <h2>Quick Links</h2>
      <ul>
        <li>
          <a href="#">Visiting an Apple Store FAQ</a>
        </li>
        <li>
          <a href="#">Shop Apple Store Online</a>
        </li>
        <li>
          <a href="#">Accessories</a>
        </li>
        <li>
          <a href="#">AirPods</a>
        </li>
        <li>
          <a href="#">AirTag</a>
        </li>
      </ul>
    </div>
  </div>

  {(() => {
    if (!searchButtonHidden) {
      return (
      <div class="mobile-search-container">
        <div class="link-search"></div>
        <div class="search-bar">
          <form action="">
            <input type="text" placeholder="Search apple.com" />
          </form>
        </div>
        <span class="cancel-btn">Cancel</span>
        <div class="quick-links">
          <h2>Quick Links</h2>
          <ul>
            <li>
              <a href="#">Visiting an Apple Store FAQ</a>
            </li>
            <li>
              <a href="#">Shop Apple Store Online</a>
            </li>
            <li>
              <a href="#">Accessories</a>
            </li>
            <li>
              <a href="#">AirPods</a>
            </li>
            <li>
              <a href="#">AirTag</a>
            </li>
          </ul>
        </div>
      </div>
      );
    }
  })()}
  
</div>
<div class="horizontal-ruler"></div>
<div class="nav-container-blured-background"></div>
<div class="overlay"></div>

<!-- INFO CSS -->
<style
  is:global
  define:vars={{
    appleLogoSVGLight,
    appleLogoSVGDark,
    searchIconSVGLight,
    searchIconSVGDark,
    bagIconSVGLight,
    bagIconSVGDark,
    closeIconSVGLight,
    closeIconSVGDark,
    searchbarMargin,
  }}
>
  :root {

  }

  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Inter", sans-serif;
    font-weight: 300;
    overflow-y: scroll;
  }

  /* INFO CSS VARS LIGHT */
  .theme-light {
    --nav-primary-text-color: #1c1c1c;
    --nav-secondary-text-color: #9ca3af;
    --nav-background: #ffffffb3;
    --nav-search-background: #ffffff;
    --nav-search-input-background: #ebebeb;
    --nav-blured-background: #ffffff00;
    --nav-border-color: #d3d3d3;
    --nav-highlight-color: #2997ff;
  }

  /* INFO CSS VARS DARK */
  .theme-dark {
    --nav-primary-text-color: #ffffff;
    --nav-secondary-text-color: #9ca3af;
    --nav-background: #000000b3;
    --nav-search-background: #000000;
    --nav-search-input-background: #242426;
    --nav-blured-background: #00000000;
    --nav-border-color: #d3d3d3;
    --nav-highlight-color: #2997ff;
  }

  /* INFO CSS Logo with Text (link-logo-text) */
  * .desktop-nav .link-logo-text {
    display: flex;
    flex-wrap: wrap;
    align-content: space-around;
    margin-right: 30px; /* depended on logo text length, space to next element in the row */
    height: 44px;
    width: 15px;
    padding-left: 25px;
    padding-top: 3px; /* depended on horizontal logo allignment e.g. 0px / 3px */
    font-weight: 500;
    font-size: large;
  }
  .theme-light .desktop-nav .link-logo-text {
    background: var(--appleLogoSVGLight);
    background-position: center;
    background-repeat: no-repeat;
  }
  .theme-dark .desktop-nav .link-logo-text {
    background: var(--appleLogoSVGDark);
    background-position: center;
    background-repeat: no-repeat;
  }

  * .link-logo {
    display: block;
    height: 44px;
    width: 15px;
  }
  .theme-light .link-logo {
    background: var(--appleLogoSVGLight);
    background-position: center;
    background-repeat: no-repeat;
  }
  .theme-dark .link-logo {
    background: var(--appleLogoSVGDark);
    background-position: center;
    background-repeat: no-repeat;
  }

  * .link-search {
    display: block;
    height: 44px;
    width: 20px;
  }
  .theme-light .link-search {
    background: var(--searchIconSVGLight);
    background-position: center;
    background-size: 18px;
    background-repeat: no-repeat;
  }
  .theme-dark .link-search {
    background: var(--searchIconSVGDark);
    background-position: center;
    background-size: 18px;
    background-repeat: no-repeat;
  }

  * .link-bag {
    display: block;
    height: 44px;
    width: 20px;
  }
  .theme-light .link-bag {
    background: var(--bagIconSVGLight);
    background-position: center;
    background-size: 17px;
    background-repeat: no-repeat;
  }
  .theme-dark .link-bag {
    background: var(--bagIconSVGDark);
    background-position: center;
    background-size: 17px;
    background-repeat: no-repeat;
  }

  * .link-close {
    display: block;
    height: 44px;
    width: 20px;
  }
  .theme-light .link-close {
    background: var(--closeIconSVGLight);
    background-position: center;
    background-size: 17px;
    background-repeat: no-repeat;
  }
  .theme-dark .link-close {
    background: var(--closeIconSVGDark);
    background-position: center;
    background-size: 17px;
    background-repeat: no-repeat;
  }

  * nav .menu-icon .line-1,
  * nav .menu-icon .line-2 {
    background: var(--nav-primary-text-color);
  }

  .nav-container nav {
    width: 1000px;
    margin: 0 auto;
    padding: 0 8px;
    height: 100%;
  }

  .nav-container {
    background: var(--nav-background);
    height: 44px;
    z-index: 300;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
  }

  .nav-container-blured-background {
    background: var(--nav-blured-background);
    height: 44px;
    z-index: 200;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    /* Add the blur effect */
    backdrop-filter: blur(8px); /* Chrome */
    -webkit-backdrop-filter: blur(8px); /* Safari */
  }

  .horizontal-ruler {
    border: 0;
    -webkit-border-radius: 0;
    -moz-border-radius: 0;
    border-radius: 0;
    background-color: var(--nav-border-color);
    background-clip: padding-box;
    min-width: 100%;
    width: 100%;
    min-height: 1px;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    margin-left: 0px;
    margin-top: 44px;
    display: inline-block;
    vertical-align: top;
  }

  * .search-container form input {
    width: 100%;
    height: 44px;
    border: 0;
    outline: none;
    background: transparent;
    color: var(--nav-background);
    font-family: "Inter", sans-serif;
    font-size: 17px;
  }  

  nav .desktop-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
  }

  nav .desktop-nav li a {
    color: var(--nav-primary-text-color);
    text-decoration: none;
    font-size: 14px;
    opacity: 0.8;
    transition: opacity 400ms;
  }

  nav .desktop-nav li a:hover {
    opacity: 1;
  }

  /* INFO CSS Search Container */

  .search-container.hide {
    opacity: 0;
    pointer-events: none;
  }

  .search-container {
    width: 60%;
    margin: 0 auto;
    padding: 0 42px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 200;
  }

  .search-container .link-search {
    position: absolute;
    left: 12px;
    opacity: 0.5;
  }

  .search-container .link-close {
    position: absolute;
    top: 0;
    right: 12px;
    opacity: 0.5;
    cursor: pointer;
    transition: all 400ms;
  }

  .search-container .link-close:hover {
    opacity: 0.7;
  }

  .search-container form {
    width: 100%;
    margin: 0 auto;
  }

  /* INFO CSS Overlay */

  .overlay.show {
    position: fixed;
    background: var(--nav-background);
    width: 100%;
    height: 100vh;
    left: 0;
    top: 0;
    z-index: 100;
  }

  /* INFO CSS Quick Links */

  .search-container .quick-links {
    background: var(--nav-background);
    position: absolute;
    left: 0;
    right: 0;
    padding: 16px 8px;
    border-radius: 0 0 16px 16px;
  }

  .search-container .quick-links h2 {
    text-transform: uppercase;
    font-size: 12px;
    color: var(--nav-primary-text-color);
    margin: 0 32px;
    margin-top: 10px;
  }

  .search-container .quick-links ul {
    list-style: none;
    margin-top: 12px;
  }

  .search-container .quick-links ul li a {
    display: inline-block;
    width: 100%;
    padding: 8px 50px;
    font-size: 14px;
    color: var(--nav-background);
    text-decoration: none;
    font-weight: 400;
  }

  .search-container .quick-links ul li a:hover {
    background: var(--nav-background);
    color: var(--nav-highlight-color);
  }

  /* INFO CSS Desktop Nav Animation */

  .desktop-nav li {
    transition: all 400ms ease;
  }

  .desktop-nav.hide li {
    opacity: 0;
    transform: scale(0.8);
    pointer-events: none;
  }

  /* INFO CSS Overlay Animation */

  .overlay {
    transition: all 400ms ease;
  }

  /* INFO CSS Navigation Menu Items Transition Delay */

  .desktop-nav li:nth-of-type(1),
  .desktop-nav.hide li:nth-of-type(10) {
    transition-delay: 0ms;
  }

  .desktop-nav li:nth-of-type(2),
  .desktop-nav.hide li:nth-of-type(9) {
    transition-delay: 30ms;
  }

  .desktop-nav li:nth-of-type(3),
  .desktop-nav.hide li:nth-of-type(8) {
    transition-delay: 60ms;
  }

  .desktop-nav li:nth-of-type(4),
  .desktop-nav.hide li:nth-of-type(7) {
    transition-delay: 90ms;
  }

  .desktop-nav li:nth-of-type(5),
  .desktop-nav.hide li:nth-of-type(6) {
    transition-delay: 120ms;
  }

  .desktop-nav li:nth-of-type(6),
  .desktop-nav.hide li:nth-of-type(5) {
    transition-delay: 150ms;
  }

  .desktop-nav li:nth-of-type(7),
  .desktop-nav.hide li:nth-of-type(4) {
    transition-delay: 180ms;
  }

  .desktop-nav li:nth-of-type(8),
  .desktop-nav.hide li:nth-of-type(3) {
    transition-delay: 210ms;
  }

  .desktop-nav li:nth-of-type(9),
  .desktop-nav.hide li:nth-of-type(2) {
    transition-delay: 240ms;
  }

  .desktop-nav li:nth-of-type(10),
  .desktop-nav.hide li:nth-of-type(1) {
    transition-delay: 270ms;
  }

  /* INFO CSS Search Container Animation */

  .search-container form,
  .search-container .link-search {
    opacity: 1;
    transform: translateX(0);
    transition: all 400ms ease;
    transition-delay: 300ms;
  }

  .search-container.hide form,
  .search-container.hide .link-search {
    opacity: 0;
    transform: translateX(50px);
  }

  .search-container .link-search {
    opacity: 0.6;
  }

  .search-container.hide .link-close {
    opacity: 0;
  }

  .search-container .link-close {
    opacity: 0.5;
    transition: all 400ms ease;
    transition-delay: 400ms;
  }

  .search-container.hide .quick-links h2 {
    opacity: 0;
    transform: translateX(50px);
  }

  .search-container .quick-links h2 {
    opacity: 1;
    transform: translateX(0);
    transition: all 400ms ease;
    transition-delay: 100ms;
  }

  .search-container.hide .quick-links ul li {
    transform: translateX(60px);
    opacity: 0;
  }

  .search-container .quick-links ul li {
    opacity: 1;
    transform: translateX(0);
    transition: all 400ms ease;
  }

  .search-container .quick-links ul li:nth-of-type(1) {
    transition-delay: 120ms;
  }

  .search-container .quick-links ul li:nth-of-type(2) {
    transition-delay: 140ms;
  }

  .search-container .quick-links ul li:nth-of-type(3) {
    transition-delay: 160ms;
  }

  .search-container .quick-links ul li:nth-of-type(4) {
    transition-delay: 180ms;
  }

  .search-container .quick-links ul li:nth-of-type(5) {
    transition-delay: 200ms;
  }

  /* INFO CSS Hidden Items */

  .mobile-nav,
  .mobile-search-container {
    display: none;
  }

  /* INFO CSS Media Queries */

  @media (max-width: 1100px) {
    .nav-container nav {
      width: 100%;
      padding: 0 32px;
    }
  }

  @media (max-width: 768px) {
    .nav-container .desktop-nav {
      flex-direction: column;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 0vh;
      background: var(--nav-search-background);
      justify-content: start;
      overflow: hidden;
      z-index: -1;
      transition: all 1000ms ease;
    }

    .nav-container.active .desktop-nav {
      height: 100vh;
    }

    .nav-container .desktop-nav li {
      width: 100%;
      padding: 0 32px;
    }

    .nav-container .desktop-nav li:first-child {
      margin-top: var(--searchbarMargin);
    }

    .nav-container .desktop-nav .link-logo,
    .nav-container .desktop-nav .link-search,
    .nav-container .desktop-nav .link-bag {
      display: none;
    }

    .nav-container .desktop-nav li a {
      padding: 16px 0;
      display: inline-block;
      border-bottom: 1px solid var(--nav-border-color);
      width: 100%;
      font-size: 17px;
      transform: translateY(-80px);
      opacity: 0;
      transition: all 700ms ease;
    }

    .nav-container.active .desktop-nav li a {
      transform: translateY(0);
      opacity: 1;
    }

    /* INFO CSS Mobile Nav */

    nav .mobile-nav {
      display: flex;
      width: 100%;
      justify-content: space-between;
      list-style: none;
    }

    nav .menu-icon-container {
      width: 20px;
      height: 44px;
      display: flex;
      align-items: center;
      cursor: pointer;
    }

    nav .menu-icon {
      position: relative;
      width: 100%;
    }

    * nav .menu-icon .line-1,
    * nav .menu-icon .line-2 {
      position: absolute;
      height: 1px;
      width: 100%;
      background: var(--nav-primary-text-color);
      transition-property: transform, top;
      transition-delay: 0ms, 160ms;
      transition-duration: 200ms;
    }

    nav .menu-icon .line-1 {
      top: -4px;
    }

    nav .menu-icon .line-2 {
      top: 4px;
    }

    .nav-container.active nav .menu-icon-container .menu-icon .line-1 {
      top: 0;
      transform: rotateZ(45deg);
      transition-property: top, transform;
      transition-delay: 0ms, 160ms;
      transition-duration: 200ms;
    }

    .nav-container.active nav .menu-icon-container .menu-icon .line-2 {
      top: 0;
      transform: rotateZ(-45deg);
      transition-property: top, transform;
      transition-delay: 0ms, 160ms;
      transition-duration: 200ms;
    }

    /* INFO CSS Bag Icon Animation */

    .nav-container.active .mobile-nav .link-bag {
      transform: translateY(8px);
      opacity: 0;
      pointer-events: none;
    }

    .nav-container .mobile-nav .link-bag {
      transition: all 1000ms ease;
    }

    /* INFO CSS Search Box */

    .mobile-search-container input {
      width: 100%;
      padding: 12px 36px;
      font-family: "Inter", sans-serif;
      font-size: 17px;
      background: var(--nav-search-input-background);
      border: 0;
      color: var(--nav-primary-text-color);
      border-radius: 8px;
      outline: none;
    }

    .mobile-search-container {
      position: relative;
      padding: 0 16px;
      margin-top: -30px;
      border-bottom: 1px solid var(--nav-border-color);
      display: flex;
      padding-bottom: 16px;
      align-items: center;
      transform: rotateX(90deg);
      opacity: 0;
      transition: all 600ms ease;
    }

    .nav-container.active .mobile-search-container {
      transform: rotateX(0deg);
      margin-top: 10px;
      opacity: 1;
    }

    .mobile-search-container .link-search {
      position: absolute;
      left: 24px;
      opacity: 0.5;
      background-size: 15px;
    }

    /* INFO CSS Nav Move Up */

    .nav-container nav.move-up {
      margin-top: -40px;
    }

    /* INFO CSS Cancel Button */

    .mobile-search-container .cancel-btn {
      color: var(--nav-highlight-color);
      font-size: 17px;
      font-weight: 400;
      cursor: pointer;
      width: 0px;
      overflow: hidden;
      transition: all 400ms ease;
    }

    .mobile-search-container .search-bar.active + .cancel-btn {
      padding: 0 16px;
      width: 74px;
    }

    .mobile-search-container .search-bar {
      flex: 1;
    }

    /* INFO CSS Desktop Nav Move Down */

    nav .desktop-nav.move-down li:first-child {
      margin-top: 150px;
    }

    nav .desktop-nav.move-down li {
      opacity: 0;
      pointer-events: none;
    }

    /* INFO CSS Quick Links */

    .mobile-search-container .search-bar.active ~ .quick-links {
      top: 80px;
      opacity: 1;
      pointer-events: auto;
      transition-delay: 40ms;
    }

    .mobile-search-container .quick-links {
      position: absolute;
      left: 0;
      right: 0;
      padding: 0 32px;
      opacity: 0;
      pointer-events: none;
      top: 10px;
      transition: all 400ms ease;
    }

    .mobile-search-container .quick-links ul {
      list-style: none;
    }

    .mobile-search-container .quick-links h2 {
      color: var(--nav-secondary-text-color);
      font-size: 12px;
      text-transform: uppercase;
      font-weight: 400;
    }

    .mobile-search-container .quick-links ul li a {
      padding: 16px 0;
      display: inline-block;
      text-decoration: none;
      color: var(--nav-primary-text-color);
      font-size: 14px;
      font-weight: 400;
      border-bottom: 1px solid var(--nav-border-color);
      width: 100%;
    }

    .mobile-search-container .quick-links ul li a:hover {
      color: var(--nav-highlight-color);
    }

    /* INFO CSS Nav Animation */
    .nav-container nav {
      transition: all 200ms ease;
    }
  }

  input,
  div,
  span,
  a {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  }
</style>

<!-- INFO SCRIPT -->
<script is:inline>

  // Desktop Version
  const searchButton = document.querySelector("nav .desktop-nav .link-search");
  const closeButton = document.querySelector(".search-container .link-close");
  const desktopNav = document.querySelector(".desktop-nav");
  const searchContainer = document.querySelector(".search-container");
  const overlay = document.querySelector(".overlay");

  if (searchButton !== null) {
    searchButton.addEventListener("click", () => {
      desktopNav.classList.add("hide");
      searchContainer.classList.remove("hide");
      overlay.classList.add("show");
    });
  }

  closeButton.addEventListener("click", () => {
    desktopNav.classList.remove("hide");
    searchContainer.classList.add("hide");
    overlay.classList.remove("show");
  });

  overlay.addEventListener("click", () => {
    desktopNav.classList.remove("hide");
    searchContainer.classList.add("hide");
    overlay.classList.remove("show");
  });

  // Mobile Version
  const menuIconContainer = document.querySelector("nav .menu-icon-container");
  const navContainer = document.querySelector(".nav-container");

  menuIconContainer.addEventListener("click", () => {
    navContainer.classList.toggle("active");
  });

  const searchBar = document.querySelector(
    ".mobile-search-container .search-bar"
  );
  const nav = document.querySelector(".nav-container nav");
  const searchInput = document.querySelector(".mobile-search-container input");
  const cancelBtn = document.querySelector(
    ".mobile-search-container .cancel-btn"
  );

  if (searchInput !== null) {
    searchInput.addEventListener("click", () => {
      searchBar.classList.add("active");
      nav.classList.add("move-up");
      desktopNav.classList.add("move-down");
    });
  }
  
  if (cancelBtn !== null) {
    cancelBtn.addEventListener("click", () => {
      searchBar.classList.remove("active");
      nav.classList.remove("move-up");
      desktopNav.classList.remove("move-down");
    });
  }
  
</script>
